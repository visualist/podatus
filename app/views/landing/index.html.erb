<div class="home-page">
  <div class="home-left">
    <h2>List of books in this study</h2>
    <ul>
      <% @books.each do |book| %>
        <li><span class="title"><%= book.has_data? ? link_to(book.title, book_path(book)) : book.title %></span> by <%= book.author %>, <%= book.published_year %></li>
      <% end %>
    </ul>
  </div>
  <div class="home-right">
    <p>A textual analysis by parts of speech of e-texts from Gutenberg &hellip;</p>
    <img width="240px" src="<%= image_tag 'diagram2.png' %>"/>
  </div>
</div>
